<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPVerification">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7B108E"
        android:alpha="0.7"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="28dp"
        android:gravity="center">

        <ImageView
            android:layout_width="57dp"
            android:layout_height="55dp"
            android:src="@drawable/baseline_my_location_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP Verification"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textSize="32sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Enter your code that we have sent to you"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textColor="#F8F1F1" />
        <TextView
            android:id="@+id/textveemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test@gmail.com"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#F1EBEB" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textColor="#F8F1F1" />
        <TextView
            android:id="@+id/textvwphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 9999999999"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#F1EBEB" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <EditText
            android:id="@+id/otpET1"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLines="1"
            android:textColor="#000000"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/otpET2"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLines="1"
            android:textColor="#000000"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/otpET3"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLines="1"
            android:textColor="#000000"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/otpET4"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLines="1"
            android:textColor="#000000"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/otpET5"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLines="1"
            android:textColor="#000000"
            android:layout_weight="1"/>



    </LinearLayout>
        <Button
            android:id="@+id/verifyBtn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="12dp"
            android:background="@color/white"
            android:text="VERIFY"
            app:cornerRadius="40dp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="570dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did not Receive OTP"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/resendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend"
            android:padding="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>


    </LinearLayout>
</RelativeLayout>